<div class="item" itemscope="" itemtype="http://schema.org/MusicEvent">
    <div itemprop="location" itemscope="" itemtype="http://schema.org/MusicVenue">
        <meta itemprop="name" content="{{place.name}}"/>
        <meta itemprop="address" content="{{place.location.city}}, {{place.location.street}}, {{place.location.country}}"/>
    </div>
    <div class="item__i">
        <div class="img" itemprop="performer" itemtype="http://schema.org/Person">
            <title itemprop="name">{{t "alisa_name"}}</title>
            <img itemprop="image" width="270" height="432" src="{{cover.source}}" alt="{{name}}" />
        </div>
        <div class="title">
            <div class="title__i">
                <div class="name">
                    <h3 itemprop="name" class="event-name">{{name}}</h3>
                    <p itemprop="startDate">{{start_time}}</p>
                    <p>{{place.location.city}}</p>
                </div>
                <div class="description">
                    <p>{{description}}
                    </p>
                </div>
                <div class="share">
                    <ul class="clearfix">
                        <li><a href="https://www.facebook.com/events/{{id}}" target="_blank" class="facebook-event-link"><i class="fa fa-facebook"></i></a>
                        </li>
                        <!--<li><a href="#"><i class="fa fa-twitter"></i></a>-->
                        <!--</li>-->
                        <!--<li><a href="#"><i class="fa fa-google-plus"></i></a>-->
                        <!--</li>-->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
